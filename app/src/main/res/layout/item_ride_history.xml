<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.masarcardriver.model.ModelRideHistory.Result" />
    </data>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:elevation="@dimen/_40sdp"
            android:layout_margin="@dimen/_9sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{data.reqDatetime}"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/_12sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{data.status}"
                        android:textAllCaps="true"
                        android:textColor="@color/red"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/_12sdp"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/_10sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/ivMenu"
                        android:padding="@dimen/_5sdp"
                        android:layout_weight=".85"
                        >
                        <TextView
                            android:id="@+id/tvFromTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{data.startTime}"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            />

                        <TextView
                            android:id="@+id/tvToTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{data.endTime}"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/_12sdp"
                            android:layout_below="@id/view1"
                            android:layout_marginTop="-8dp"
                            />

                        <ImageView
                            android:id="@+id/ivfrom"
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_6sdp"
                            android:background="@drawable/circle_blue_bg"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_toRightOf="@+id/tvFromTime"
                            />
                        <TextView
                            android:id="@+id/tvFrom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{data.picuplocation}"
                            android:layout_toRightOf="@+id/ivfrom"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:backgroundTint="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"
                            />
                        <View
                            android:id="@+id/view1"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@color/black"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_below="@+id/ivfrom"
                            android:layout_marginVertical="@dimen/_2sdp"
                            android:layout_toRightOf="@+id/tvFromTime"
                            />
                        <ImageView
                            android:id="@+id/ivto"
                            android:layout_below="@+id/view1"
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_6sdp"
                            android:background="@drawable/down_arrow"
                            android:layout_toRightOf="@+id/tvFromTime"
                            />
                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_toRightOf="@id/view1"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_below="@+id/tvFrom"
                            android:layout_marginTop="@dimen/_15sdp"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view2"
                            android:layout_toRightOf="@id/ivto"
                            >
                            <TextView
                                android:id="@+id/etDestination"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{data.dropofflocation}"
                                android:inputType="none"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:textSize="@dimen/_12sdp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:fontFamily="@font/poppins_regular"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/black"
                                />
                        </RelativeLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".15">

                        <ImageView
                            android:id="@+id/GoDetail"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/right_arrow"
                            />


                        <TextView
                            android:layout_below="@+id/GoDetail"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_height="wrap_content"
                            android:text="@{data.tipAmount}"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/textColor"
                            android:gravity="center_horizontal"/>


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</layout>