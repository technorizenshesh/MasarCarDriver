<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_header"
            android:id="@+id/header"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">


                <TextView
                    android:id="@+id/tvLicen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driving_license"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"/>


                <LinearLayout
                    android:id="@+id/llUpload"
                    android:layout_below="@+id/tvLicen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_7sdp"
                    android:layout_margin="@dimen/_5sdp">


                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/camera"/>


                    <TextView
                        android:id="@+id/tv_upload"
                        android:layout_below="@+id/tvCarName"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_driving_license"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textAllCaps="false"
                        android:textColor="@color/black"/>

                </LinearLayout>


                <View
                    android:id="@+id/view"
                    android:layout_below="@+id/llUpload"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_color_100"
                    android:layout_margin="@dimen/_10sdp"/>




                <TextView
                    android:id="@+id/tvUpload"
                    android:layout_below="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textAllCaps="false"
                    android:textColor="@color/black"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_update"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/rounded_green_bg"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tvUpload"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:elevation="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    />



            </RelativeLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_below="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">



            </RelativeLayout>



        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>